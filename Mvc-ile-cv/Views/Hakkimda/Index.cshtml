@using Mvc_ile_cv.Models.Entity
@model List<TBL_Hakkimda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="mt-3 mb-3">Hakkımda Düzenleme Sayfası</h2>
<form method="post">
    @foreach (var item in Model)
    {
        <label>Ad</label>
        <input type="text" name="Ad" class="form-control mb-4" value="@item.Ad"/>

        <label>Soyad</label>
        <input type="text" name="Soyad" class="form-control mb-4" value="@item.Soyad" />

        <label>Adres</label>
        <input type="text" name="Adres" class="form-control mb-4" value="@item.Adres" />

        <label>Telefon</label>
        <input type="text" name="Telefon" class="form-control mb-4" value="@item.Telefon" />

        <label>Mail</label>
        <input type="email" name="Mail" class="form-control mb-4" value="@item.Mail" />

        <label>Aciklama</label>
        <textarea type="Aciklama" name="Aciklama" rows="5" class="form-control mb-4">@item.Aciklama</textarea>

        <label>Resim</label>
        <input type="text" name="Resim" class="form-control mb-4" value="@item.Resim" />
    }
    <button type="submit" class="btn btn-success mt-2 btn-sm">
        <i class="fas fa-pencil-alt"></i>
        Güncelle
    </button>
</form>
