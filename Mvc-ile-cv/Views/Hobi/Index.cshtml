@using Mvc_ile_cv.Models.Entity
@model List<TBL_Hobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3 mb-3">Hobi Düzenleme Sayfası</h2>
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="Aciklama_1">@item.Aciklama_1</textarea>
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="Aciklama_2">@item.Aciklama_2</textarea>
    }
    <button type="submit" class="btn btn-success mt-2 btn-sm">
        <i class="fas fa-pencil-alt"></i>
        Güncelle
    </button>
</form>
