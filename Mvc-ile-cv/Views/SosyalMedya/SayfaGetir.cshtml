@model Mvc_ile_cv.Models.Entity.Tbl_SosyalMedya
@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4 class="mb-4 mt-3">Sosyal Medya Güncelleme Sayfası</h4>
<form method="post" class="form-group">
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Sosyal Medya Adı")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control mb-3" })

    @Html.Label("Sosyal Medya Linki")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control mb-3" })

    @Html.Label("Sosyal Medya Iconu")
    @Html.TextBoxFor(x => x.Ikon, new { @class = "form-control mb-3" })

    <button class="btn btn-info">Güncelle</button>
</form>

