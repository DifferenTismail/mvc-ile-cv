@using Mvc_ile_cv.Models.Entity
@model List<TBL_Iletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper mt-3">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div>
                        <div class="card">
                            <div class="card-body">
                                <div class="">
                                    <div class="tab-pane" id="timeline">
                                        <!-- The timeline -->
                                        <div class="timeline timeline-inverse">
                                            @foreach (var item in Model)
                                            {
                                                <div class="time-label">
                                                    <span class="bg-info">
                                                        @(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))
                                                    </span>
                                                </div>
                                                <div>
                                                    <i class="fas fa-comments bg-warning"></i>

                                                    <div class="timeline-item">
                                                        <span class="time"><i class="far fa-clock"></i> @item.Mail</span>

                                                        <h3 class="timeline-header"><a href="#">@item.AdSoyad</a> @item.Konu</h3>

                                                        <div class="timeline-body">
                                                            @item.Mesaj
                                                        </div>
                                                        <div class="timeline-footer">
                                                            <a href="#" class="btn btn-primary btn-flat btn-sm">Görüntüle</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                        </div>
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</div>
